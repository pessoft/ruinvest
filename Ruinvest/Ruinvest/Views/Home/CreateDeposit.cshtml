@using RuinvestLogic.Logic
@{
    Layout = "~/Views/Shared/_RuinvestBase.cshtml";
}

<div class="label-deposit revealator-once revealator-slideup revealator-duration30 revealator-delay1 ">
    <div>
        <span>Тарифные планы</span>
    </div>
</div>

<div class="my-money revealator-once revealator-slideup revealator-duration30 revealator-delay1 ">
    <div id="availableMoney" data-money="@ViewBag.AvailableMoney">
        <span>доступные средства: </span>
        <span id="userMoney">@ViewBag.AvailableMoney</span> 
        <span> руб.</span>
    </div>
</div>

<div class="discription-deposit revealator-once revealator-slidedown  revealator-duration15 revealator-delay15">
    <div data-day="@Rates.OneDay" class="deposit">
        <div class="diposit-day">@Convert.ToInt32(Rates.OneDay)</div>
        <div>день</div>
        <div class="description-profit">прибыль 1.5% в день</div>
    </div>
    <div data-day="@Rates.Week" class="deposit">
        <div class="diposit-day">@Convert.ToInt32(Rates.Week)</div>
        <div>дней</div>
        <div class="description-profit">прибыль 1.5% в день</div>
    </div>
    <div data-day="@Rates.TwoWeeks" class="deposit">
        <div class="diposit-day">@Convert.ToInt32(Rates.TwoWeeks)</div>
        <div>дней</div>
        <div class="description-profit">прибыль 1.5% в день</div>
    </div>
    <div data-day="@Rates.Month" class="deposit">
        <div class="diposit-day">@Convert.ToInt32(Rates.Month)</div>
        <div>дней</div>
        <div class="description-profit">прибыль 2% в день</div>
    </div>
</div>

<div class="activate-deposit revealator-once revealator-slidedown  revealator-duration15 revealator-delay15">
    <div class="input-append">
        <input type="number" placeholder="Введите сумму депозита" class="text-input" id="input-amount">
        <button type="submit" class="" id="addNewDeposit">Создать депозит</button>
    </div>
</div>
